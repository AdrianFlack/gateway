pipeline {
    agent { docker { image 'python:2.7-slim-jessie'
                     args '-u root:root' } }
    stages {
        stage('Running unittests') {
            steps {
                checkout scm
                sh ''' pip install --user cherrypy
                      cd testing/unittests/
                      ./run.sh'''
            }
        }
    }
}
